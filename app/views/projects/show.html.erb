<%= render layout: '/shared/widget', locals: { title: 'Show Projects' } do %>

  <%= render partial: 'shared/notice' %>

  <dl class='dl-horizontal'>
    <dt>Title:</dt>
    <dd><%= @project.title %></dd>

    <dt>Body:</dt>
    <dd><%= @project.body %></dd>

    <dt>user:</dt>
    <dd><%= @project.user %></dd>

    <dt>Image:</dt>
    <dd><%= @project.image %></dd>

    <dt>Github:</dt>
    <dd><%= @project.github %></dd>

    <hr />
    <%= link_to projects_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-list-alt'></span>
      Back
    <% end %>

    <% if can? :edit, Project %>
      <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
        <span class='glyphicon glyphicon-pencil'></span>
        Edit
      <% end %>
    <% end %>

    <% if can? :destroy, Project %>
      <%= link_to project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' do %>
        <span class="glyphicon glyphicon-trash"></span>
        Destroy
      <% end %>
    <% end %>

  </dl>
<% end %>
