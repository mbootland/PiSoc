<%= render layout: '/shared/widget', locals: { title: 'Show News' } do %>

  <%= render partial: 'shared/notice' %>

  <dl class='dl-horizontal'>
    <dt>Title:</dt>
    <dd><%= @news.title %></dd>

    <dt>Body:</dt>
    <dd><%= @news.body %></dd>

    <dt>User:</dt>
    <dd><%= @news.user %></dd>

    <hr />
    <%= link_to news_index_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-list-alt'></span>
      Back
    <% end %>
    <%= link_to edit_news_path(@news), class: 'btn btn-primary' do %>
      <span class='glyphicon glyphicon-pencil'></span>
      Edit
    <% end %>
    <%= link_to news_path(@news), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' do %>
      <span class="glyphicon glyphicon-trash"></span>
      Destroy
    <% end %>

  </dl>
<% end %>
