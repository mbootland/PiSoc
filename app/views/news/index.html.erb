<div class='page-header title-colour'>
  News
</div>
<% if can? :create, News %>
  <div>
    <%= link_to new_news_path, class: 'btn btn-primary' do %>
      <span class='glyphicon glyphicon-plus'></span>
      Add Article
    <% end %>
  </div>
<% end %>
<% render partial: 'shared/notice' %>
<tbody>
  <% @news.each do |news| %>
    <%= render layout: '/shared/widget', locals: { title: (link_to news.title, news) } do %>
    <div class="sub-title"><%= author news %></p></div>
      <%= news.body.html_safe %>
    <% end %>
  <% end %>
</tbody>
