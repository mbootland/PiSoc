<%= render layout: '/shared/widget', locals: { title: 'News' } do %>

  <%= render partial: 'shared/notice' %>

  <div class='page-header'>
    <%= link_to new_news_path, class: 'btn btn-primary' do %>
      <span class='glyphicon glyphicon-plus'></span>
      New News
    <% end %>
    <h1>Listing News</h1>
  </div>

  <div class='table-responsive'>
    <table class='table table-striped table-bordered table-hover'>
      <thead>
        <tr>
            <th>Title</th>
        <th>Body</th>
        <th>Member</th>
          </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @news) do |news| %>
                      
              <td><%= news.title %></td>
            
                      
              <td><%= news.body %></td>
            
                      
              <td><%= news.member %></td>
            
                  <% end %>
      </tbody>
    </table>
  </div>
<% end %>
