<%= form_for(@user, html: { class: 'form-horizontal', role: 'form' }) do |f| %>

  <div class='row'>
    <div class='clearfix'>

      <!-- first column start -->
      <div class='col-sm-6'>

        <div class='form-group required
          <%= 'has-error has-feedback' if @user.errors[:username].present? %>'>
          <%= f.label :username, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :username, class:'form-control',
              data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:username], value: @user.username %>
          </div>
        </div>

        <div class='form-group required <%= 'has-error has-feedback' if @user.errors[:first_name].present? %>'>
          <%= f.label :first_name, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :first_name, class:'form-control',  data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:first_name],
              value: @user.first_name %>
          </div>
        </div>

        <div class='form-group required <%= 'has-error has-feedback' if @user.errors[:last_name].present? %>'>
          <%= f.label :last_name, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :last_name, class:'form-control',  data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:last_name],
              value: @user.last_name %>
          </div>
        </div>
      </div>
      <!-- first column end -->

      <!-- second column start -->
      <div class='col-sm-6'>
        <div class='form-group required <%= 'has-error has-feedback' if @user.errors[:email].present? %>'>
          <%= f.label :email, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :email, class:'form-control',  data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:email],
              value: @user.email %>
          </div>
        </div>

        <div class='form-group required <%= 'has-error has-feedback' if @user.errors[:role].present? %>'>
          <%= f.label :role, class: 'form-control', class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.select :role, options_for_select(User.enabled_roles(current_user).collect { |s| [s[0].humanize.titleize, s[0]] }, selected: @user.role),
                { include_blank: ' - Please select -' }, class: 'form-control', required: true %>
          </div>
        </div>

        <div class='form-group <%= 'has-error has-feedback' if @user.errors[:github].present? %>'>
          <%= f.label :github, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :github, class:'form-control',  data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:github],
              value: @user.github %>
          </div>
        </div>

        <div class='form-group <%= 'has-error has-feedback' if @user.errors[:course].present? %>'>
          <%= f.label :course, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :course, class:'form-control',  data: { toggle: 'tooltip', placement: 'top' },
              title: @user.errors[:course],
              value: @user.course %>
          </div>
        </div>
      <!-- second column end -->

    </div>
  </div>

  <hr />

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to users_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-list-alt'></span>
      Back
    <% end %>
    <% if @user.id %>
      <%= link_to @user, class: 'btn btn-primary' do %>
        <span class='glyphicon glyphicon-info-sign'></span>
        Show
      <% end %>
    <% end %>
  </div>
<% end %>
