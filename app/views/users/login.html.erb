<%= render partial: 'shared/notice', locals: { the_class: flash[:the_class] } %>

<div class='row text-center'>
  <div class='clearfix'>

    <div style='width: 300px; margin: 0 auto; margin-top: 10%;'>
      <%= render layout: '/shared/widget', locals: { title: 'Login' } do %>
        <%
        pars = {}
        pars[:redirect_path] = params[:redirect_path]
        %>

        <%= form_tag do_login_users_path(pars) do %>

          <div class='form-group'>
            <%= label_tag :username, 'Username', class: 'control-label' %>
            <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'Username' %>
          </div>

          <div class='form-group'>
            <%= label_tag :password, 'Password', class: 'control-label' %>
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
          </div>

          <%= submit_tag 'Login', class: 'btn btn-primary', style: 'margin-top: 10px;' %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
